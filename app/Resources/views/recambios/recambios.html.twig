                        <a class="nav-link" href="{{path('informacion_recambios')}}"><i id="iconos" class="fas fa-info-circle"></i>INFORMACIÓN</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav ml-auto mr-5">
                    {% if app.user != null %}
                        <div class="dropdown">
                            <button style="font-size:16px; margin-left:100%; " type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                {{ app.user.nombre }}
                            </button>
                            <div style="margin-left:90%;" class="dropdown-menu">
                                <a style="font-size:16px; opacity:0.6;" class="dropdown-item" href="{{ path("logout")}}"><i class="fas fa-sign-out-alt"></i>Cerrar sesión</a>
                            </div>
                        </div>
                    {% else %}
                        <li style=" width:100%;" class="nav-item">
                            <a style="font-size:18px; opacity:0.6; margin-left:40%; width:100%;"class="nav-link" href="{{ path("login")}}"><i class="fas fa-sign-in-alt"></i> INICIAR SESIÓN</a>
                        </li>
                    {% endif %}
                </ul>  
            </div>    
        </div>
    </nav>

    <hr>
    <br><br><br><br><br>




    <!--CUERPO-->

    <main style="padding:1%;">

        <h1 style="margin-left:13%; float:left;">Recambios</h1>

        <br><br>
        <hr style="width:75%;">
        <br>

        <form style="margin-left:40%; margin-top:0.1%;" action="{{path("recambios_productos")}}">
            <input type="text" id="nombre" name="nombre" placeholder="Introduzca el nombre..">
            <button type="submit" class="btn btn-success">Buscar</button>
        </form>





        {% for recambio in datos %}

            <div class="animated fadeInUp" style="width:50%;margin:4%; margin-left:25%; padding:1%;">
                <p><a style="text-decoration:underline; color:black;" href="{{ path('recambios_show', { 'id': recambio.id }) }}"><h2 style="text-transform: uppercase;">{{ recambio.nombre }}</h2><img style="width:15%;" src="{{asset("imagen/" ~ recambio.marca)}}"</a></p>
                <a href="{{ path('recambios_show', { 'id': recambio.id }) }}"><img style="width:35%; border:1px solid black; padding:2%; float:right;" src="{{asset("imagen/" ~ recambio.img)}}"/></a>

                <p style="width:20%; margin-top:5%; font-size:20px;width:50%; text-align:left;">{{recambio.contenido}}
                    <br><br>{% if recambio.fechaCreacion %}{{ recambio.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}
                    <br><br><br>
                    <a href="{{ path('recambios_show', { 'id': recambio.id }) }}"><button type="submit" name="estado" class="btn btn-success">Comprar</button></a>
                    <button type="button" class="btn btn-danger">Añadir al carrito</button>
                    <br>
                <h1 style="color:red;">{{recambio.precio}}€</h1>


                </p>

            </div>

            <hr style="width:50%;">

        {% endfor %}


        <br><br><br><br>

