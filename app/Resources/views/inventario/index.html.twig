{% extends 'base.html.twig' %}

{% block body %}
    <h1>Inventarios list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Idrecambios</th>
                <th>Estado</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for inventario in inventarios %}
                <tr>
                    <td><a href="{{ path('inventario_show', { 'id': inventario.id }) }}">{{ inventario.id }}</a></td>
                    <td>{{ inventario.idRecambios }}</td>
                    <td>{{ inventario.estado }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('inventario_show', { 'id': inventario.id }) }}">show</a>
                            </li>
                            <li>
                                <a href="{{ path('inventario_edit', { 'id': inventario.id }) }}">edit</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('inventario_new') }}">Create a new inventario</a>
        </li>
    </ul>
</div>
{% endblock %}
