            <span class="navbar-toggler-icon"></span>
        </button>

        <div id="ali_pesta">    
            <div class="collapse navbar-collapse" id="navbarTogglerDemo01">
                <ul class="navbar-nav mr-auto">
                    <li id="b_navbar"  class="nav-item">
                        <a class="nav-link" href="{{path('administracion')}}"><i id="iconos" class="fas fa-home"></i>ADMIN USER</a>
                    </li>

                    <li id="b_navbar" class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i id="iconos" class="fas fa-tools"></i>ADMIN C/A
                        </a>
                        <div class="dropdown-menu" aria-labelledby="navbarDropdown">
                            <a class="dropdown-item" href="/cartools/web/app_dev.php/comprar/">ADMIN COMPRAR</a>
                            <a class="dropdown-item" href="/cartools/web/app_dev.php/alquiler/">ADMIN ALQUILER</a>
                        </div>
                    </li>
                    <li id="b_navbar" class="nav-item">
                        <a class="nav-link" href="/cartools/web/app_dev.php/recambios/"><i id="iconos" class="fas fa-info-circle"></i>ADMIN RECAMBIOS</a>
                    </li>
                    <li id="b_navbar" class="nav-item active">
                        <a class="nav-link" href="/cartools/web/app_dev.php/herramientas/"><i id="iconos" class="fas fa-info-circle"></i>ADMIN HERRAMIENTAS</a>
                    </li>
                </ul>

                <ul class="nav navbar-nav ml-auto mr-5">
                    {% if app.user != null %}
                        <div class="dropdown">
                            <button style="font-size:16px; margin-left:100%; " type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                                {{ app.user.nombre }}
                            </button>
                            <div style="margin-left:90%;" class="dropdown-menu">
                                <a style="font-size:16px; opacity:0.6;" class="dropdown-item" href="{{ path("logout")}}"><i class="fas fa-sign-out-alt"></i>Cerrar sesión</a>
                            </div>
                        </div>
                    {% else %}
                        <li style=" width:100%;" class="nav-item">
                            <a style="font-size:18px; opacity:0.6; margin-left:30%; width:100%;"class="nav-link" href="{{ path("login")}}"><i class="fas fa-sign-in-alt"></i> INICIAR SESIÓN</a>
                        </li>
                    {% endif %}
                </ul>  
            </div>    
        </div>
    </nav>

    <hr>
    <br><br><br>     


    <!--CUERPO-->

    <div style="margin-left:10%; margin-top:5%;">
        <h1>Herramientas list</h1>

        <table style="margin-top:2%;">
            <thead>
                <tr>
                    <th style="width:1%;">Id</th>
                    <th style="width:1%;">Nombre</th>
                    <th style="width:1%;">Contenido</th>
                    <th style="width:1%;">Marca</th>
                    <th style="width:1%;">Fechacreacion</th>
                    <th style="width:1%;">Img</th>
                    <th style="width:1%;">Precio</th>
                    <th style="width:1%;">Actions</th>
                </tr>
            </thead>
            <tbody>
                {% for herramienta in herramientas %}
                    <tr>
                        <td><a href="{{ path('herramientas_show', { 'id': herramienta.id }) }}">{{ herramienta.id }}</a></td>
                        <td>{{ herramienta.nombre }}</td>
                        <td>{{ herramienta.contenido }}</td>
                        <td>{{ herramienta.marca }}</td>
                        <td>{% if herramienta.fechaCreacion %}{{ herramienta.fechaCreacion|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{{ herramienta.img }}</td>
                        <td>{{ herramienta.precio }}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('herramientas_show', { 'id': herramienta.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('herramientas_edit', { 'id': herramienta.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>

        <ul>
            <li>
                <a href="{{ path('herramientas_new') }}">Create a new herramienta</a>
            </li>
        </ul>
    </div>
{% endblock %}
